#include<iostream>
using namespace std;
int main()
{
int size,even,odd;
even=0;
odd=0;
	cout<<"Enter the size of the array:"<<endl;
	cin>>size;
	int* array=new int[size];
		cout<<"Enter the values of the array:\n";
	for(int i=0;i<size;i++)
	{
	cin>>array[i];	
	}
	for(int i=0;i<size;i++)
	{
	if( array[i]%2==0)	{
		even++;
	}
	else {
		odd++;
	}

	}
	cout<<"Numbers that are even:\n"<<even;
	cout<<"\nNumbers that are odd:\n"<<odd;
	return 0;
}
